 | <%= link_to 'Delete', @experiment, :confirm => 'Are you sure?', :method => :delete %>
<% end %>

<br />
<br />

<%= form_for(@experiment) do |f| %>
  <%= f.error_messages %>

  <div class="actions">
    <%= f.submit 'Update' %>
  </div>

<fieldset><legend class="leg">GENERAL DATA</legend>

<table width="95%"><tr><td>

  
  <div class="field select">
    <%= f.label :partner_id, "Partner" %><br />
    <div style="display:none;">  select :experiment, :partner,Partner.find(:all).collect{|p| [p.fp7_Number + " " + p.name, p.id]} </div>
    <h3><%= @partner.verbose_me %></h3>
  </div>

  <div class="field cod">
    <%= f.label :code, "Microarray experiment code" %><br />
    <h3><%= @code %></h3>
  </div>

</td><td>

  <div class="field date">
    <%= f.label :experiment_date, "Experiment date" %><br />
    <%= date_select :experiment, :experiment_date %>
  </div>

</td><tr></table>

</fieldset>

  <div class="field area">
    <%= f.label :note %><br />
    <%= f.text_area :note, :size => "60x12"  %>
  </div>
<br />
  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>


